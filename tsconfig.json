{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs", 
    "allowJs": true,                                            
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },  
  },
  "include": [
    "src/**/*.ts"
  ]
}
